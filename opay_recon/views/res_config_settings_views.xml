<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_opay" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.opay</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Opay Wallet" string="Opay Wallet" data-key="opay_wallet">
                    <h2>Opay Wallet Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">API Settings</span>
                                <div class="text-muted">
                                    Configure your Opay API credentials and mode below.
                                </div>
                                <div class="content-group">
                                    <!-- Account Prefix Fieldd -->
                                    <div class="mt16">
                                        <label for="opay_account_prefix" class="o_form_label"/>
                                        <field name="opay_account_prefix" placeholder="Enter prefix for account numbers"/>
                                        <div class="o_form_help">
                                            The prefix to use for Opay wallet account numbers. E.g., 'OPAY'
                                        </div>
                                    </div>

                                    <!-- API Key Field -->
                                    <div class="mt16">
                                        <label for="opay_api_key" class="o_form_label"/>
                                        <field name="opay_api_key" placeholder="Enter Opay API Key"/>
                                        <div class="o_form_help">
                                            Enter the API key provided by Opay for authentication.
                                        </div>
                                    </div>

                                    <!-- Secret Key Field -->
                                    <div class="mt16">
                                        <label for="opay_secret_key" class="o_form_label"/>
                                        <field name="opay_secret_key" placeholder="Enter Opay Secret Key"/>
                                        <div class="o_form_help">
                                            Enter the secret key provided by Opay for secure transactions.
                                        </div>
                                    </div>

                                    <!-- Merchant ID Field -->
                                    <div class="mt16">
                                        <label for="opay_merchant_id" class="o_form_label"/>
                                        <field name="opay_merchant_id" placeholder="Enter Opay Merchant ID"/>
                                        <div class="o_form_help">
                                            Required for live transactions. Provided by Opay.
                                        </div>
                                    </div>

                                    <!-- Test Mode Toggle -->
                                    <div class="mt16">
                                        <label for="opay_test_mode" class="o_form_label"/>
                                        <field name="opay_test_mode"/>
                                        <div class="o_form_help">
                                            Enable Test Mode to generate dummy accounts and use sandbox environment.
                                        </div>
                                    </div>

                                    <!-- Test Credentials Button -->
                                    <div class="mt16">
                                        <button name="validate_live_credentials"
                                                type="object"
                                                string="Test Live Credentials"
                                                class="btn-primary"/>
                                        <div class="o_form_help">
                                            Validate your live credentials without creating wallets. Errors and payload info will display in messages.
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Action and Menu items for the configuration -->
    <record id="opay_config_settings_action" model="ir.actions.act_window">
        <field name="name">Opay Configuration</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'module': 'opay_wallet'}</field>
    </record>

    <menuitem id="menu_opay_config_settings" name="Opay Configuration"
              parent="base.menu_administration" action="opay_config_settings_action"/>
</odoo>
