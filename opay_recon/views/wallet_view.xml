<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for opay.wallet -->
    <record id="view_opay_wallet_form" model="ir.ui.view">
        <field name="name">opay.wallet.form</field>
        <field name="model">opay.wallet</field>
        <field name="arch" type="xml">
            <form string="Opay Wallet">
                <header>
                    <button name="get_balance" id="get_balance" data-hotkey="q"
                    string="Update Balance" class="btn-primary" type="object" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_payments"
                                    type="object" icon="fa-bars"
                                    invisible="payment_count != 0">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="payment_count"/>
                                </span>
                                <span class="o_stat_text">
                                        Payments
                                    </span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="reference"/>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="account_number"/>
                            <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="last_query" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View for opay.wallet -->
    <record id="view_opay_wallet_tree" model="ir.ui.view">
        <field name="name">opay.wallet.tree</field>
        <field name="model">opay.wallet</field>
        <field name="arch" type="xml">
            <tree string="Opay Wallets">
                <field name="reference"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="account_number"/>
                <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </tree>
        </field>
    </record>
</odoo>