<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for opay.wallet -->
    <record id="view_opay_wallet_form" model="ir.ui.view">
        <field name="name">opay.wallet.form</field>
        <field name="model">opay.wallet</field>
        <field name="arch" type="xml">
            <form string="Opay Wallet">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="account_number" readonly="1"/>
                            <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <!-- Wallet Details -->
                    <group string="Wallet Details">
                        <!-- <field name="state"/> -->
                        <field name="create_date" readonly="1"/>
                        <field name="write_date" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for opay.wallet -->
    <record id="view_opay_wallet_tree" model="ir.ui.view">
        <field name="name">opay.wallet.tree</field>
        <field name="model">opay.wallet</field>
        <field name="arch" type="xml">
            <tree string="Opay Wallets">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="account_number"/>
                <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </tree>
        </field>
    </record>

    <!-- Search View for opay.wallet -->
    <record id="view_opay_wallet_search" model="ir.ui.view">
        <field name="name">opay.wallet.search</field>
        <field name="model">opay.wallet</field>
        <field name="arch" type="xml">
            <search string="Search Opay Wallets">
                <field name="partner_id"/>
                <field name="account_number"/>
                <filter name="balance_greater_than_100" string="Balance &gt; 100" domain="[('balance', '&gt;', 100)]"/>
                <filter name="balance_less_than_100" string="Balance &lt; 100" domain="[('balance', '&lt;', 100)]"/>
            </search>
        </field>
    </record>
</odoo>
