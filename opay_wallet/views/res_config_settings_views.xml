<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='integration']" position="inside">
                <setting string="Opay Configurations" help="Set Opay parameter for wallet generation" id="opay_wallet">
                    <div class="content-group mt16">
                        <label for="opay_public_key" class="o_light_label mr8"/>
                        <field name="opay_public_key"/>
                    </div>
                    <div class="content-group mt16">
                        <label for="opay_client_auth_key" class="o_light_label mr8"/>
                        <field name="opay_client_auth_key"/>
                    </div>
                    <div class="content-group mt16">
                        <label for="opay_merchant_id" class="o_light_label mr8"/>
                        <field name="opay_merchant_id"/>
                    </div>
                    <div class="content-group mt16">
                        <label for="opay_merchant_private_key" class="o_light_label mr8"/>
                        <field name="opay_merchant_private_key"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
